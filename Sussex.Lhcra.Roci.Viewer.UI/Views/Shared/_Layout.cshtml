@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Our Care Connected</title>

    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- Bootstrap Core CSS -->
    <link href="../vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="../dist/css/sb-admin-2.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

    <link href="~/css/CoolTable.css" rel="stylesheet" />

    <style>

        h1 {
            color: #F90B6D;
            font-family: 'Open Sans', sans-serif;
            font-size: 34px;
            font-weight: 300;
            line-height: 40px;
            margin: 0 0 16px;
            border-bottom: #cfcfcf solid 0px;
            background-color: #d9edf7;
            padding: 5px 15px 5px 15px; /* Top Right  Bottom Left  */
            margin: 15px 0px 0px 0px;
            font-weight: bold;
            text-align: center;
        }

        p {
            padding: 5px;
            margin: 5px;
            background-color: lavender;
        }

        h2 {
            background-color: #d9edf7;
            padding: 5px;
        }

        #customers {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #customers td, #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #customers tr:hover {
                background-color: #ddd;
            }

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #4CAF50;
                color: white;
            }

        #customers1 {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #customers1 td, #customers1 th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers1 tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #customers1 tr:hover {
                background-color: #ddd;
            }

            #customers1 th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #4CAF50;
                color: white;
            }

        .file-input {
            display: inline-block;
            text-align: left;
            background: #fff;
            padding: 16px;
            width: 450px;
            position: relative;
            border-radius: 3px;
        }

            .file-input > [type='file'] {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 0;
                z-index: 10;
                cursor: pointer;
            }

            .file-input > .button {
                display: inline-block;
                cursor: pointer;
                background: #eee;
                padding: 8px 16px;
                border-radius: 2px;
                margin-right: 8px;
            }

            .file-input:hover > .button {
                background: dodgerblue;
                color: white;
            }

            .file-input > .label {
                color: #333;
                white-space: nowrap;
                opacity: .3;
            }

            .file-input.-chosen > .label {
                opacity: 1;
            }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.6/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.6/js/gijgo.min.js" type="text/javascript"></script>
    <script src="~/lib/Dashboard.js" type="text/javascript"></script>



</head>

<body>

    <div id="wrapper">
        @*<partial name="Partials/_Navigation" />*@
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0; color:red;">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand header-text" href="/home">
                    <span style="color: #fff;">Our Care Connected </span>
                </a>

            </div>

            @if (Configuration.GetValue<bool>("EmbeddedMode") == false)
            {
                if (User.Identity.IsAuthenticated)
                {
                    var userClaims = User.Identity as System.Security.Claims.ClaimsIdentity;
                    <div class="pull-right">
                        <div class="text-info ">@userClaims?.FindFirst("name")?.Value</div>

                        @if (userClaims?.HasClaim(claim => claim.Value == "clinical") == true)
                        {
                            <div class="text-info ">Role: Clinical</div>
                        }

                        <div>
                            <a class="navbar-brand header-text text-danger " asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
                        </div>
                    </div>

                }
                else
                {

                    <a class="navbar-brand header-text  text-info pull-right" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a>
                }
            }



            <div class="navbar-default sidebar" role="navigation">

                <div class="sidebar-nav navbar-collapse">

                    <ul class="nav" id="side-menu">

                        <li class="sidebar-search">

                            <form method="get" action="#" enctype="multipart/form-data">

                                <div class="input-group custom-search-form">

                                    <input id="quickSearch" name="quickSearch" type="text" class="form-control" placeholder="SUSSEX\OhirobAdmin">

                                    <span class="input-group-btn">

                                        <button class="btn btn-default" type="submit">

                                            <i class="fa fa-search"></i>

                                        </button>

                                    </span>

                                </div>

                            </form>


                        </li>

                        <li>
                            <a href="@Url.Action("Index","Home")"><i style="width:30px" class="fas fa-calendar"></i>&nbsp;Dashboard</a>
                        </li>

                        @if (!string.IsNullOrEmpty(ViewBag.Dob) && !string.IsNullOrEmpty(ViewBag.NhsNumber))
                        {
                            <li>
                                <a href="@Url.Action("Summary","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-briefcase"></i>&nbsp;Summary</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ProblemsAndIssues","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-building"></i>&nbsp;Problems And Issues</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Medication","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-medkit"></i>&nbsp;Medications</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Allergies","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-bed"></i>&nbsp;Allergies</a>
                            </li>

                            <li>
                                <a href="@Url.Action("Encounters","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-ambulance"></i>&nbsp;Encounters</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Observations","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-microphone"></i>&nbsp;Observations</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Immunisations","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-briefcase"></i>&nbsp;Immunisations</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Investigations","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-briefcase"></i>&nbsp;Investigations</a>
                            </li>

                            <li>
                                <a href="@Url.Action("Referrals","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-barcode"></i>&nbsp;Referrals</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Clinical","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-balance-scale"></i>&nbsp;Clinical Items</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Admin","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-briefcase"></i>&nbsp;Admin Items</a>
                            </li>

                            <li>
                                <a href="@Url.Action("CommunityCarePlans","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-briefcase"></i>&nbsp;Community Care Plans</a>
                            </li>

                            <li>
                                <a href="@Url.Action("MentalHealthCrisisPlans","Home", new {dob = ViewBag.Dob, nhsNumber = ViewBag.NhsNumber })"><i style="width:30px" class="fas fa-briefcase"></i>&nbsp;Mental Health Crisis Plans</a>
                            </li>

                        }


                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">
            @RenderBody()
        </div>
    </div>


    <script src="../vendor/jquery/jquery.min.js"></script>
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="../vendor/metisMenu/metisMenu.min.js"></script>
    <script src="../vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="../vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="../vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script src="../dist/js/sb-admin-2.js"></script>

</body>

</html>
