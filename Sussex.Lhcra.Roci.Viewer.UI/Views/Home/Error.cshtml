@model Sussex.Lhcra.Roci.Viewer.Domain.Models.PatientCareRecordBundleDomainModel

@{
    ViewData["Title"] = "Error";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Notifications</h4>
                    </div>
                </div>
                <div class="card-body">
                    <p> @(Model.Message ?? "There was an error whilst retrieving the patient record. Please contact admin.") </p>
                    <div class="toast fade show" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header">
                            <svg class="bd-placeholder-img rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                                <rect width="100%" height="100%" fill="#007aff"></rect>
                            </svg>
                            <strong class="mr-auto">Oops!</strong>
                            <small>1 mins ago</small>
                            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="toast-body">
                            @if (null != Model)
                            {
                                @if ((int)Model.StatusCode == 502)// Add To Constants
                                {
                                    <p>
                                        <strong>Message :</strong> <code> No records were found for patient </code>
                                    </p>
                                }
                                else if ((int)Model.StatusCode == 403)// Add To Constants
                                {
                                    <p>
                                        <strong>Message :</strong> <code> NO_PATIENT_CONSENT </code>
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        <strong>Error Message :</strong> <code>@Model.Message</code>
                                    </p>
                                }

                                <p>
                                    <strong>Corellation ID:</strong> <code>@Model.CorrelationId</code>
                                </p>


                            }
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
    </div>
</div>

